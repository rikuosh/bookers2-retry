<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">     
      <%= render "users/user_info", user: @user %>      
      <%= render "new", book: @book %>
    </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
              <%= link_to user_path(@book1.user) do %>
                <%= attachment_image_tag @book1.user, :profile_image, :fill, 50, 50, format:"jpeg" %></br><%= @book1.user.name %>
              <% end %>
              </td>
              <td><%= @book1.title %></td>
              <td><%= @book1.body %></td>
              <% if @book1.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book1), class:"btn btn-success" %></td>
              <td><%= link_to "Delete", book_path(@book1), method: :delete,data: { confirm: '本当に消しますか？' }, class:"btn btn-danger" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>